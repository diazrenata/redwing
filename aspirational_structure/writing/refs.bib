	pmid = {26170294},
	note = {Publisher: National Academy of Sciences
Section: Biological Sciences},
	keywords = {body size, desert rodents, invasive grass, paleoecology, Quaternary},
	pages = {9656--9661},
	file = {Snapshot:/Users/renatadiaz/Zotero_restored/storage/7ITV957V/9656.html:text/html;Full Text PDF:/Users/renatadiaz/Zotero_restored/storage/36459FTM/Terry and Rowe - 2015 - Energy flow and functional compensation in Great B.pdf:application/pdf},
