	year = {2013},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1466-8238.2012.00782.x},
	keywords = {ecology, macroecology, null models, energetics, size–density relationship, Abundance, Damuth's rule, invariance, metabolic scaling},
