	file = {Snapshot:/Users/renatadiaz/Zotero_restored/storage/M8G6QPZS/j.1466-8238.2012.00782.html:text/html;Full Text PDF:/Users/renatadiaz/Zotero_restored/storage/9UPZT9Z2/Isaac et al. - 2013 - The paradox of energy equivalence.pdf:application/pdf},
