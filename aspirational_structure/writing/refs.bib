	urldate = {2021-08-19},
	journal = {Oikos},
	author = {Rosenfeld, Jordan S.},
	year = {2002},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1034/j.1600-0706.2002.980116.x},
	pages = {156--162},
	file = {Snapshot:/Users/renatadiaz/Zotero_restored/storage/S9ER3R4N/j.1600-0706.2002.980116.html:text/html;Full Text PDF:/Users/renatadiaz/Zotero_restored/storage/7M2CNRU8/Rosenfeld - 2002 - Functional redundancy in ecology and conservation.pdf:application/pdf},
