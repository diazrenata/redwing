	year = {2008},
	note = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1890/07-1369.1},
	keywords = {species–abundance distribution, species–area relationship, macroecology, biodiversity, metabolic theory, maximum entropy, endemics–area relationship, energy distribution, spatial pattern, spatial scaling, state variables},
	pages = {2700--2711},
	file = {Full Text PDF:/Users/renatadiaz/Zotero_restored/storage/Y6SVMQTI/Harte et al. - 2008 - Maximum Entropy and the State-Variable Approach to.pdf:application/pdf;Snapshot:/Users/renatadiaz/Zotero_restored/storage/CN2HLGF9/07-1369.html:text/html},
