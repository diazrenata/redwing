	year = {2017},
	note = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1002/ecy.1697},
	keywords = {ecosystem function, metacommunity, dispersal limitation, local diversity, R*, regional diversity, species sorting},
	pages = {909--919},
