	journal = {Ecology},
	author = {Touchton, Janeene M. and Smith, James N. M.},
	year = {2011},
	note = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1890/10-1458.1},
	keywords = {species compensation, ant-following birds, army ants, Barro Colorado Island, behavioral plasticity, competitive release, delayed responses, fragmentation, Gymnopithys leucaspis, Hylophylax naevioides, Panama, Phaenostictus mcleannani},
	pages = {1126--1136},
	file = {Snapshot:/Users/renatadiaz/Zotero_restored/storage/G46UE5J3/10-1458.html:text/html;Full Text PDF:/Users/renatadiaz/Zotero_restored/storage/A2B2BRMI/Touchton and Smith - 2011 - Species loss, delayed numerical responses, and fun.pdf:application/pdf},
