	author = {Sorte, Frank A. La and Boecklen, William J.},
	year = {2005},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2699.2005.01271.x},
	keywords = {temporal turnover, homogenization, species turnover, Anthropogenic activities, avian assemblages, common species, North American Breeding Bird Survey},
